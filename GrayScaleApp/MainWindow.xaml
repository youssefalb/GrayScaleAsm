<Window x:Class="GrayScaleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrayScaleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="518" Width="1297">
    <Grid HorizontalAlignment="Left" Width="1232">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="67*"/>

        </Grid.ColumnDefinitions>
        <Image x:Name="PictureBox1" HorizontalAlignment="Left" Height="282" Margin="16,10,0,0" VerticalAlignment="Top" Width="375" Grid.ColumnSpan="2"/>
        <Image x:Name="PictureBox2" HorizontalAlignment="Left" Height="282" Margin="117,10,0,0" VerticalAlignment="Top" Width="375" Grid.Column="1"/>
        <Image x:Name="PictureBox3" HorizontalAlignment="Left" Height="282" Margin="513,10,0,0" VerticalAlignment="Top" Width="375" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button x:Name="button1" Content="Browse" HorizontalAlignment="Left" Margin="163,320,0,0" VerticalAlignment="Top" Height="44" Width="100" Click="Button_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="button2" Content="Grayscale" HorizontalAlignment="Left" Margin="17,320,0,0" VerticalAlignment="Top" Height="44" Width="100" Click="button2_Click" Grid.Column="1"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="38,400,0,0" TextWrapping="Wrap" Text="C# Time:" VerticalAlignment="Top"/>
        <TextBlock x:Name="cTime" HorizontalAlignment="Left" Margin="88,400,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="24,400,0,0" TextWrapping="Wrap" Text="AsmTime:" VerticalAlignment="Top" Width="54" Grid.Column="1"/>
        <TextBlock x:Name="asmTime" HorizontalAlignment="Left" Margin="84,400,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="20,424,0,0" TextWrapping="Wrap" Text="cppTime:" VerticalAlignment="Top" Width="54" Grid.Column="1"/>
        <TextBlock x:Name="cppTime" HorizontalAlignment="Left" Margin="79,424,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.Column="1"/>
        <StackPanel Margin="38,440,0,10" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <RadioButton x:Name="radioButton1" GroupName="group1" Content="Algorithm 1" IsChecked="True"/>
            <RadioButton x:Name="radioButton2" GroupName="group1" Content="Algorithm 2"  />
            <RadioButton x:Name="radioButton3" GroupName="group1" Content="Algorithm 3"  
                      Checked="RadioButton_Checked" Unchecked="RadioButton_Unchecked"/>
        </StackPanel>
        <StackPanel x:Name="shadesPanel" Margin="1,440,150,19" RenderTransformOrigin="0.671,0.884" Grid.Column="1" Visibility="Collapsed" >

            <TextBlock Text="Shades number: (2-256)"/>
            <TextBox x:Name="shadesTextBox"/>
        </StackPanel>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="251,334,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Grid.Column="1"><Run Text="Assembly "/><Run Language="pl-pl" Text="results"/></TextBlock>
        <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Center" Margin="0,329,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Grid.Column="2"><Run Language="pl-pl" Text="CPP r"/><Run Text="esults"/></TextBlock>
    </Grid>
</Window>